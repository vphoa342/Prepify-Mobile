{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "$apis/*": [
        "src/apis/*"
      ],
      "$services/*": [
        "src/services/*"
      ],
      "$configs/*": [
        "src/configs/*"
      ],
      "$components/*": [
        "src/components/*"
      ],
      "$contexts/*": [
        "src/contexts/*"
      ],
      "$screens/*": [
        "src/screens/*"
      ],
      "$hooks/*": [
        "src/hooks/*"
      ],
      "$types/*": [
        "src/types/*"
      ],
      "$utils/*": [
        "src/utils/*"
      ],
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}